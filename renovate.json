{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "dependencyDashboard": true,
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^import_map.json$", "^deno.jsonc?$"],
      "matchStrings": [
        "['\"].+?['\"]\\s*:\\s*['\"](?<stdPath>https://deno.land/std)@(?<currentValue>v?(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?)?)?)/(?<denoPackage>.+?)[/'\"]"
      ],
      "depNameTemplate": "{{{stdPath}}}/{{{denoPackage}}}",
      "packageNameTemplate": "{{stdPath}}",
      "datasourceTemplate": "deno"
    },
    {
      "customType": "regex",
      "fileMatch": ["^import_map.json$", "^deno.jsonc?$"],
      "matchStrings": [
        "['\"].+?['\"]\\s*:\\s*['\"](?<depName>https://deno.land/x/.+?)@(?<currentValue>v?(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?)?)?)[/'\"]"
      ],
      "datasourceTemplate": "deno"
    },
    {
      "customType": "regex",
      "fileMatch": ["\\.[jt]sx?$"],
      "matchStrings": [
        "((?:im|ex)port(?:.|\\s)+?from\\s*|//\\s*@deno-types=)['\"](?<depName>https://deno.land/x/.+?)@(?<currentValue>v?(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?)?)?)(?<denoPakage>.+?)[/'\"]",
        "((?:im|ex)port(?:.|\\s)+?from\\s*|//\\s*@deno-types=)['\"](?<depName>https://deno.land/std)@(?<currentValue>v?(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:\\.(?:0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?)?)?)[/'\"]"
      ],
      "datasourceTemplate": "deno"
    }
  ],
  "packageRules": [
    {
      "description": "Replace deno.land/std with jsr:@std",
      "matchDatasources": ["deno"],
      "matchPackagePatterns": ["^https://deno\\.land/std"],
      "replacementNameTemplate": "{{{ replace 'https://deno\\.land/std' 'jsr:@std' depName }}}"
    }
  ]
}
